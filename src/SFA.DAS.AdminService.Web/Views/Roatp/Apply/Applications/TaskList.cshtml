@using SFA.DAS.AdminService.Web.Helpers;
@using SFA.DAS.AssessorService.Domain.Extensions

@model SFA.DAS.AdminService.Web.ViewModels.Apply.Applications.RoatpTaskListViewModel

@{
    ViewBag.Title = "Application overview";
    var BackAction = "OpenApplications";

}

<a class="govuk-back-link" asp-controller="RoatpApplication" asp-action="@BackAction">Back</a>

<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            @if (Model.Sequences == null)
            {
                <h1 class="govuk-heading-xl">Application not active</h1>
            }
            else
            {
                <h1 class="govuk-heading-xl">Application overview</h1>

                <partial name="~/Views/Roatp/Apply/_OrganisationDetails.cshtml" />

                <ul class="govuk-list">
                    @foreach (var applicationSequence in Model.ApplySequences.Where(seq => !seq.NotRequired && seq.IsActive).OrderBy(seq => seq.SequenceNo))
                    {
                        <li>
                            <h2 class="govuk-heading-m">
                                @applicationSequence.Description
                            </h2>

                            @foreach (var applicationSection in applicationSequence.Sections.Where(sec => !sec.NotRequired).OrderBy(sec => sec.SectionNo))
                            {
                                var section = Model.Sections.Single(s => s.SectionNo == applicationSection.SectionNo && s.SequenceNo == applicationSequence.SequenceNo);

                                foreach (var pg in section.QnAData.Pages.Where(p => p.Active))
                                {
                                    <a class="govuk-link" href="@Url.Action("Page", "RoatpApplication", new {section.ApplicationId, section.SequenceNo, section.SectionNo, pg.PageId})">
                                        @pg.LinkTitle  @* TODO: Show correct content. *@
                                    </a>

                                    var applicationPage = applicationSection.Pages?.FirstOrDefault(p => p.PageId == pg.PageId);

                                    @if (!string.IsNullOrWhiteSpace(applicationPage?.ReviewStatus))
                                    {
                                        <div class="govuk-tag">
                                            @Html.Raw(applicationPage.ReviewStatus)
                                        </div>
                                    }

                                    <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">
                                }
                            }
                        </li>
                    }
                </ul>

                <ul class="govuk-list">
                    <li>
                        <h2 class="govuk-heading-m">
                            Assessor outcome
                        </h2>

                        <a class="govuk-link" href="#">
                            @* TODO: Add Assessor Outcome page *@
                            Confirm assessor outcome
                        </a>

                        <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">
                    </li>
                </ul>
            }

            <p class="govuk-body">
                <a class="govuk-link" asp-controller="RoatpApplication" asp-action="@BackAction">Return to applications</a>
            </p>
        </div>`
    </div>
</main>