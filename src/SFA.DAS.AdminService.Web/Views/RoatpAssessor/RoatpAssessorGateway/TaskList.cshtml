@using SFA.DAS.AdminService.Web.Extensions

@model SFA.DAS.AdminService.Web.ViewModels.RoatpAssessor.RoatpAssessorGatewayTaskListViewModel

<main class="govuk-main-wrapper " id="main-content" role="main">

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <span class="govuk-caption-m">Gateway</span>
            <h1 class="govuk-heading-xl">Assessment overview</h1>
        </div>
    </div>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            <dl class="govuk-summary-list govuk-!-margin-bottom-9">
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">UKPRN</dt>
                    <dd class="govuk-summary-list__value">@Model.Ukprn</dd>
                </div>
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">Organisation name</dt>
                    <dd class="govuk-summary-list__value">@Model.Name</dd>
                </div>
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">Provider route</dt>
                    <dd class="govuk-summary-list__value">@Model.ProviderRoute</dd>
                </div>
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">Application reference number</dt>
                    <dd class="govuk-summary-list__value">@Model.ApplicationRef</dd>
                </div>
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">Application submitted</dt>
                    <dd class="govuk-summary-list__value">@Model.SubmittedAt.ToGdsDate()</dd>
                </div>
            </dl>

            <ol class="app-task-list">
                <li>
                    <h2 class="app-task-list__section">
                        <span class="app-task-list__section-number">1. </span> Initial checks
                    </h2>
                    <ul class="app-task-list__items">
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">
                                @if (Model.CanDoLegalChecks)
                                {
                                    <a asp-controller="RoatpAssessorGateway"
                                       asp-action="LegalChecks"
                                       asp-route-applicationId="@Model.ApplicationId">Legal checks</a>
                                }
                                else
                                {
                                    <text>Legal checks</text>
                                }
                            </span>

                            <strong class="govuk-tag app-task-list__task-todo" id="gw-company-legal-todo">To do</strong>

                        </li>
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">
                                @if (Model.CanDoAddressChecks)
                                {
                                    <a asp-controller="RoatpAssessorGateway"
                                       asp-action="AddressChecks"
                                       asp-route-applicationId="@Model.ApplicationId">Address checks</a>
                                }
                                else
                                {
                                    <text>Address checks</text>
                                }
                            </span>

                            <strong class="govuk-tag app-task-list__task-todo" id="gw-company-address-todo">To do</strong>

                        </li>
                    </ul>
                </li>
                <li>
                    <h2 class="app-task-list__section">
                        <span class="app-task-list__section-number">2. </span> Register checks
                    </h2>
                    <ul class="app-task-list__items">
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">RoATP</span>

                            <strong class="govuk-tag app-task-list__task-todo" id="gw-company-roatp-todo">To do</strong>

                        </li>
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">Register of training organisations</span>

                            <strong class="govuk-tag app-task-list__task-todo" id="gw-company-roto-todo">To do</strong>

                        </li>
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">End Point Assessment Organisation</span>

                            <strong class="govuk-tag app-task-list__task-todo" id="gw-company-epao-todo">To do</strong>

                        </li>
                    </ul>
                </li>
                <li>
                    <h2 class="app-task-list__section">
                        <span class="app-task-list__section-number">3. </span> Organisation checks
                    </h2>
                    <ul class="app-task-list__items">
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">Organisation information</span>

                            <strong class="govuk-tag app-task-list__task-todo" id="gw-company-ico-todo">To do</strong>

                        </li>
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">
                                Who's in control
                            </span>
                            <strong class="govuk-tag app-task-list__task-todo" id="gw-whosincontrol-todo">To do</strong>
                        </li>
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">
                                Organisation type
                            </span>
                            <strong class="govuk-tag app-task-list__task-todo" id="gw-orgdesc-todo">To do</strong>
                        </li>
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">
                                Experience and accreditations
                            </span>
                            <strong class="govuk-tag app-task-list__task-todo" id="gw-ofsted-todo">To do</strong>
                        </li>
                    </ul>
                </li>
                <li>
                    <h2 class="app-task-list__section">
                        <span class="app-task-list__section-number">4. </span> Criminal and compliance checks
                    </h2>
                    <ul class="app-task-list__items">
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">
                                The organisation
                            </span>
                            <strong class="govuk-tag app-task-list__task-todo" id="gw-compliance-org-todo">To do</strong>
                        </li>
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">
                                Who's in control
                            </span>
                            <strong class="govuk-tag app-task-list__task-todo" id="gw-compliance-people-todo">To do</strong>
                        </li>
                    </ul>
                </li>
                <li>
                    <h2 class="app-task-list__section">
                        <span class="app-task-list__section-number">5. </span> Submission checks
                    </h2>
                    <ul class="app-task-list__items">
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">
                                Application permissions and checks
                            </span>
                            <strong class="govuk-tag app-task-list__task-todo" id="gw-compliance-org-todo">To do</strong>
                        </li>
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">
                                ‘Commercial in confidence’ information
                            </span>
                            <strong class="govuk-tag app-task-list__task-todo" id="gw-compliance-people-todo">To do</strong>
                        </li>
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">
                                Terms and conditions (CoA’s)
                            </span>
                            <strong class="govuk-tag app-task-list__task-todo" id="gw-compliance-people-todo">To do</strong>
                        </li>
                    </ul>
                </li>
            </ol>
        </div>
    </div>
</main>